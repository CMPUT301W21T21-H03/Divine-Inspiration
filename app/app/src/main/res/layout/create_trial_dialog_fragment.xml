            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GeoLocation"
                android:textColor="@color/beige1" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="151dp">

                <Button
                    android:id="@+id/increase_trial_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/black2"
                    android:text="-"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/decrease_trial_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/black2"
                    android:text="+"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/value_trial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Value"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/editTextNumberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="123456789"
                    android:ems="10" />

                <EditText
                    android:id="@+id/editTextNumber4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black2"
                    android:ems="10"
                    android:hint="Value"
                    android:inputType="numberDecimal|numberSigned"
                    android:textAlignment="center"
                    android:textColor="@color/beige1"
                    android:textColorHint="@color/beige1"
                    android:textSize="30dp" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="212dp">

                <Button
                    android:id="@+id/binomial_fail_decrement_button"
                    android:layout_width="39dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="97dp"
                    android:layout_marginBottom="88dp"
                    android:gravity="center"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/beige1"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/binomial_pass_button"
                    android:layout_width="104dp"
                    android:layout_height="62dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black2"
                    android:text="Pass"
                    android:textColor="@color/beige1" />

                <Button
                    android:id="@+id/binomial_fail_button"
                    android:layout_width="104dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="297dp"
                    android:layout_marginBottom="132dp"
                    android:background="@color/black2"
                    android:text="Fail"
                    android:textColor="@color/beige1" />

                <TextView
                    android:id="@+id/binomial_fail_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="62dp"
                    android:layout_marginBottom="83dp"
                    android:text="V1"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/binomial_pass_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="68dp"
                    android:layout_marginBottom="83dp"
                    android:text="V2"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/binomial_pass_decrement_button"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="357dp"
                    android:layout_marginTop="99dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="87dp"
                    android:gravity="center|top"
                    android:text="-"
                    android:textAlignment="viewStart"
                    android:textColor="@color/beige1"
                    android:textSize="8sp" />

            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
