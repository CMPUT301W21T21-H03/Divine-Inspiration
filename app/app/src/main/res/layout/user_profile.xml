<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back_arrow_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#FFFFFF"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profileTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Profile"
                android:textSize="48sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userIdTxt"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="User ID: "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/userIdInfoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="example User ID"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contactTxt"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Name: "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/contactNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="John Smith"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contactCityTxt"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="City: "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/contactCityInfoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="City example"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contactAddressTxt"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Address: "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/contactAddressInfoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="123 xxxx lane"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/edit_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_button"
        android:clickable="true"
        android:paddingHorizontal="50dp"
        android:paddingVertical="15dp"
        android:text="Edit Contact"
        android:textColor="#353535"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>