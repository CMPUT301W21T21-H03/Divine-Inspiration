<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2">

    <TextView
        android:id="@+id/settings_experiment_name"
        android:layout_width="415dp"
        android:layout_height="71dp"
        android:text="Experiment Name"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/end_experiment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="End Experiment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experiment_description_settings" />

    <Button
        android:id="@+id/unpublish_experiment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unpublish Experiment"
        app:layout_constraintTop_toBottomOf="@+id/end_experiment_button"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/delete_experiment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Experiment"
        app:layout_constraintTop_toBottomOf="@+id/unpublish_experiment_button"
        tools:layout_editor_absoluteX="155dp" />

    <TextView
        android:id="@+id/experiment_description_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_experiment_name"
        tools:layout_editor_absoluteX="149dp" />

</androidx.constraintlayout.widget.ConstraintLayout>