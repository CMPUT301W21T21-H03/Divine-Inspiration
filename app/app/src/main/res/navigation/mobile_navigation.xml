<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.DivineInspiration.experimenter.Activity.UI.Profile.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/homeToExp"
            app:destination="@id/navigation_experimentFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.DivineInspiration.experimenter.Activity.UI.Scan.ScanFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_scan" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.DivineInspiration.experimenter.Activity.UI.Explore.ExploreFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_explore" />
    <fragment
        android:id="@+id/navigation_experimentFragment"
        android:name="com.DivineInspiration.experimenter.Activity.UI.Profile.navigation_experimentFragment"
        android:label="fragment_navigation_experiment"
        tools:layout="@layout/fragment_navigation_experiment" />
</navigation>